generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// ------------------------
// ENUMS
// ------------------------
enum Role {
    ADMIN
    STAFF
    MEMBER
}

enum UserStatus {
    ACTIVE
    INACTIVE
}

enum MemberStatus {
    ACTIVE
    SUSPENDED
    EXPIRED
}

enum SubscriptionStatus {
    ACTIVE
    EXPIRED
    CANCELLED
}

enum PaymentMethod {
    CASH
    ONLINE
}

enum PaymentStatus {
    PAID
    PENDING
    FAILED
}

enum Gender {
    MALE
    FEMALE
}

enum PlanStatus {
    ACTIVE
    INACTIVE
}

// ------------------------
// USERS (AUTH & ROLES)
// ------------------------
model User {
    id       String     @id @default(uuid())
    name     String
    email    String     @unique
    password String
    role     Role
    status   UserStatus @default(ACTIVE)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    members   Member[]
}

// ------------------------
// MEMBERS (GYM CUSTOMERS)
// ------------------------
model Member {
    id Int @id @default(autoincrement())

    fullName String
    phone    String  @unique
    email    String?

    gender      Gender
    dateOfBirth DateTime?

    status   MemberStatus @default(ACTIVE)
    joinDate DateTime     @default(now())

    createdById String?
    createdBy   User?    @relation(fields: [createdById], references: [id])
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    subscriptions Subscription[]
    attendances   Attendance[]

    @@index([phone]) // For faster lookups by phone number
}

// ------------------------
// MEMBERSHIP PLANS
// ------------------------
model Plan {
    id            Int            @id @default(autoincrement())
    name          String         @unique
    price         Float
    duration      Int // in days
    status        PlanStatus     @default(ACTIVE)
    subscriptions Subscription[]
}

// ------------------------
// SUBSCRIPTIONS (MEMBER PLAN INSTANCE)
// ------------------------
model Subscription {
    id        Int                @id @default(autoincrement())
    memberId  Int
    planId    Int
    startDate DateTime
    endDate   DateTime
    status    SubscriptionStatus @default(ACTIVE)

    createdAt DateTime @default(now())

    member   Member    @relation(fields: [memberId], references: [id])
    plan     Plan      @relation(fields: [planId], references: [id])
    payments Payment[]
}

// ------------------------
// PAYMENT (MANUAL CASH / ONLINE)
// ------------------------
model Payment {
    id             Int           @id @default(autoincrement())
    subscriptionId Int
    amount         Decimal
    method         PaymentMethod
    paidAt         DateTime?
    status         PaymentStatus @default(PENDING)

    subscription Subscription @relation(fields: [subscriptionId], references: [id])
}

// ------------------------
// ATTENDANCE (CHECK-IN / CHECK-OUT)
// ------------------------
model Attendance {
    id       Int       @id @default(autoincrement())
    memberId Int
    checkIn  DateTime  @default(now())
    checkOut DateTime?

    member Member @relation(fields: [memberId], references: [id])
}

// ------------------------
// SINGLE GYM PROFILE (CONFIGURABLE INFO)
// ------------------------
model GymProfile {
    id      Int     @id @default(1)
    name    String
    phone   String
    email   String?
    address String?
    logoUrl String?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
